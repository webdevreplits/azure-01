# Azure Platform Support WebApp - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Replit/Azure/Local)
PGHOST=localhost
PGPORT=5432
PGDATABASE=azure_support
PGUSER=postgres
PGPASSWORD=your_postgres_password_here

# Alternative: Full database URL (overrides individual settings above)
# DATABASE_URL=postgresql://username:password@host:port/database

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================

# Azure Service Principal Authentication
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_SUBSCRIPTION_ID=your_default_subscription_id_here

# Azure Resource Manager Endpoints (usually don't need to change)
# AZURE_RESOURCE_MANAGER_ENDPOINT=https://management.azure.com/
# AZURE_ACTIVE_DIRECTORY_ENDPOINT=https://login.microsoftonline.com/

# =============================================================================
# DATABRICKS CONFIGURATION (for Databricks environment)
# =============================================================================

# Databricks SQL Warehouse Connection
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id
DATABRICKS_ACCESS_TOKEN=your_databricks_access_token_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment Settings
ENVIRONMENT=development
DEBUG=false
HOST=0.0.0.0
PORT=5000

# Session Management
SESSION_SECRET=your_session_secret_key_here_change_in_production

# Feature Flags
ENABLE_COST_MANAGEMENT=true
ENABLE_PERFORMANCE_MONITOR=true
ENABLE_AUTOMATION=true
ENABLE_DEBUG_MODE=false

# =============================================================================
# REFRESH AND CACHING
# =============================================================================

# Auto-refresh settings
AUTO_REFRESH=true
REFRESH_INTERVAL=30

# Cache settings
CACHE_TTL_MINUTES=15
MAX_CACHE_SIZE_MB=100

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email settings (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# Notification settings
DEFAULT_NOTIFICATION_EMAIL=admin@company.com
INCIDENT_NOTIFICATION_ENABLED=true
COST_ALERT_THRESHOLD=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/azure_support.log
MAX_LOG_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:5000,https://your-domain.com

# Rate limiting
ENABLE_RATE_LIMITING=false
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Performance alert thresholds (percentages)
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=90
MEMORY_WARNING_THRESHOLD=85
MEMORY_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=90

# Response time thresholds (milliseconds)
RESPONSE_TIME_WARNING=1000
RESPONSE_TIME_CRITICAL=2000

# =============================================================================
# COST MANAGEMENT
# =============================================================================

# Cost alert settings
MONTHLY_COST_BUDGET=5000
DAILY_COST_THRESHOLD=200
COST_ANOMALY_DETECTION=true
COST_OPTIMIZATION_SUGGESTIONS=true

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup settings
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_HOUR=2

# Maintenance settings
AUTO_CLEANUP_ENABLED=true
CLEANUP_RETENTION_DAYS=90
MAINTENANCE_MODE=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Slack integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#azure-alerts
SLACK_NOTIFICATIONS_ENABLED=false

# Microsoft Teams integration (optional)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-teams-webhook
TEAMS_NOTIFICATIONS_ENABLED=false

# PagerDuty integration (optional)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key
PAGERDUTY_ENABLED=false

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Development settings
DEV_MODE=false
MOCK_AZURE_APIS=true
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/azure_support_test

# Debug settings
ENABLE_SQL_LOGGING=false
ENABLE_HTTP_LOGGING=false
ENABLE_PERFORMANCE_PROFILING=false

# =============================================================================
# REPLIT SPECIFIC (automatically set by Replit)
# =============================================================================

# These are automatically set by Replit, don't manually set
# REPL_ID=
# REPL_SLUG=
# REPL_OWNER=
# REPL_HOME=

# =============================================================================
# DATABRICKS SPECIFIC (automatically set by Databricks)
# =============================================================================

# These are automatically set by Databricks, don't manually set
# DATABRICKS_RUNTIME_VERSION=
# DATABRICKS_CLUSTER_ID=
# SPARK_HOME=
# SPARK_VERSION=

# =============================================================================
# CLOUD PROVIDER METADATA (automatically set by cloud providers)
# =============================================================================

# GitHub Codespaces
# CODESPACE_NAME=
# GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN=

# Gitpod
# GITPOD_WORKSPACE_ID=
# GITPOD_WORKSPACE_URL=

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Database connection pool settings
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# HTTP client settings
HTTP_TIMEOUT=30
HTTP_RETRY_COUNT=3
HTTP_RETRY_DELAY=1

# Memory and resource limits
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=80
MAX_CONCURRENT_REQUESTS=100

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Application monitoring
APP_INSIGHTS_INSTRUMENTATION_KEY=your_app_insights_key
ENABLE_METRICS_COLLECTION=true
METRICS_EXPORT_INTERVAL=60

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_ENABLED=true
